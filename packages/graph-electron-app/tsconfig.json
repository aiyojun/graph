{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "es2021"
    ],
    "module": "Node16",
    "moduleResolution": "node",
    "typeRoots": [],
    "types": [
      "node"
    ],
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.js"
  ]
}
