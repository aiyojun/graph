{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "es2021",
    ],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": { "@/*": ["./src/*"] }
  },
  "include": [
    "**/*.ts"
  ]
}
