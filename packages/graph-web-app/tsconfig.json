{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "es2021"
    ],
    "module": "umd",
    "typeRoots": [
      "node_modules/graph-engine/@types"
    ],
    "types": ["graph-engine"],
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.js"
  ]
}
